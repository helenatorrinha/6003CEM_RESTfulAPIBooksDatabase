{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
      "author": {
        "id": "/author",
        "title": "Author",
        "description": "An author of book in the database",
        "type": "object",
        "properties": {
          "firstName": {
            "description": "The first name of the author",
            "type": "string"
          },
          "lastName": {
            "description": "The last name of the author",
            "type": "string"
          },
          "description": {
            "description": "Description of the author",
            "type": "string"
          },
          "avatarURL": {
            "description": "URL for the image of the author",
            "type": "string"
          }
        },
        "required": [
            "firstName",
            "lastName"
        ],
        "additionalProperties": false
      },
      "authorCreated": {
        "id": "/authorCreated",
        "title": "Author Created",
        "description": "The confirmation of the creation of a new author",
        "type": "object",
        "properties": {
            "id": {
                "description": "The id of the new author",
                "type": "integer"
            }
        }
      },
      "authorUpdate": {
        "id": "/author/[id]",
        "title": "Author Update",
        "description": "Update the author's information",
        "type": "object",
        "properties": {
          "firstName": {
            "description": "The first name of the author",
            "type": "string"
          },
          "lastName": {
            "description": "The last name of the author",
            "type": "string"
          },
          "description": {
            "description": "Description of the author",
            "type": "string"
          },
          "avatarURL": {
            "description": "URL for the image of the author",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "authorUpdated": {
          "id": "/authorUpdated",
          "title": "Author Updated",
          "description": "The confirmation of the update of the author's information",
          "type": "object",
          "properties": {
              "id": {
                  "description": "id of the updated author record",
                  "type": "integer"
              }
          }
      }
    }
  }